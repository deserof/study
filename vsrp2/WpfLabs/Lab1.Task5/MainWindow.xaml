<Window x:Class="Lab1.Task5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1.Task5"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="700">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <WrapPanel>
        <Button Content="Top Button" VerticalAlignment="Top" Height="20"></Button>
        <Button Content="Tall Button2" Height="70"></Button>
        <Button Content="Bottom Button" VerticalAlignment="Bottom" Height="20"></Button>
        <Button Content="Strech Button" Width="85"></Button>
        <Button Content="Centered Button" Height="20"></Button>
    </WrapPanel>
</Window>
